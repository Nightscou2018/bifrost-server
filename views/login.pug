html(lang='en')
	head
		title Bifrost Server
	body
		h1 Login to Tidepool
		form(method='post')
			p
				label(for='username') Username: 
				input(type='text', name='username')
			p
				label(for='password') Password: 
				input(type='password', name='password')
			p
				label(for='environment') Environment: 
				select(name='environment')
					option(value='prd') Production
					option(value='int') Integration
					option(value='stg') Staging
					option(value='dev') Development
					option(value='custom') Custom
			button(type='submit') Login
		each message in flash
			h4(style="color: red;") #{message}
